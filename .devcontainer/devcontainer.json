{
  "name": "Python 3.6 Dev Container",
  "image": "mcr.microsoft.com/devcontainers/python:0-3.6",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.6"
    }
  },
  "postCreateCommand": "pip install -r requirements.txt",
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      },
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  }
}
